<h1>Events#index</h1>

<section class="row">
  <div class="grid grid-6">
    <div class="panel panel-primary">
      <div class="panel-heading"><%= link_to "View All Categories", genres_path %></div>
        <h3><%= @genres.first.title %></h3>
        <% @genres.first.events.first(4).each do |event| %>
          <%= event.event_details %>
          <br>
        <% end %>
        <br>
        <h3><%= @genres.second.title %></h3>
        <% @genres.second.events.first(4).each do |event| %>
          <%= event.event_details %>
          <br>
        <% end %>
        <h3><%= @genres.third.title %></h3>
        <% @genres.third.events.first(4).each do |event| %>
          <%= event.event_details %>
          <br>
        <h3><%= @genres[3].title %></h3>
        <% @genres[3].events.first(4).each do |event| %>
          <%= event.event_details %>
          <br>
        <% end %>
        <% end %>
    </div>
  </div>

  <div class="grid grid-6">
    <div class="panel panel-primary">
      <div class="panel-heading">View All Events</div>
        <% @events.each do |event| %>
          <%= link_to "#{event.act.act_name}", act_path(event.act.id) %>
          <br>
          <%= link_to "#{event.venue.venue_name}", venue_path(event.venue.id) %>
          <br>
          <%= event.event_start_time.strftime('%H:%M on %d %^b %Y') %>
          <br>
          <br>
        <% end %>
    </div>
  </div>
</section>
