<section class="row">
  <div class="grid grid-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
      <p>Add New Act</p>
      </div>
        <%= form_for @act do |f| %>
          <%= f.label :act_name %>
          <%= f.text_field :act_name %>
          <br>
          <%= f.label :act_details %>
          <%= f.text_field :act_details, :rows => 20, :cols => 20 %>
          <br>
          <%= f.label :act_image %>
          <%= f.text_field :act_image %>
          <br>
          <br>
          <%= f.submit 'Add Act!' %>
        <% end %>
    </div>
  </div>
</section>